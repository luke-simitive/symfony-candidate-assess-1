{% extends "base.html.twig" %}

{% if post %}
    {% block title %}
        <h3>Displaying Blog Post: <mark>{{ post.title }}</mark></h3>
    {% endblock %}

    {% block content %}
        <p>
            <small>{{ post.created.format("d/m/Y H:i") }} by {{ post.postedBy }}</small>
        </p>
        <p>
            <blockquote>{{ post.body }}</blockquote>
        </p>
    {% endblock %}

    {% block sidebar %}
        <div class="sidebar-module">
            <br>
            <a href="{{ path('blog_home') }}" type="button" class="btn btn-default">Back to posts</a>
            <br><br>
            <h4>Blog History</h4>
            <ol class="list-unstyled">
                <li>e.g. 03/01/18 - Blog Title</li>
                <li>e.g. 02/01/18 - Blog Title</li>
                <li>e.g. 01/01/18 - Blog Title</li>
            </ol>
        </div>
    {% endblock %}
{% endif %}
